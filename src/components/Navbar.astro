---
// Navbar Component
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="#inicio" class="flex items-center">
        <img
          src="/images/Confirmo-landing.png"
          alt="Confirmo"
          class="h-10 w-auto object-contain"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#inicio" class="nav-link text-text hover:text-accent transition-colors duration-200">
          Inicio
        </a>
        <a href="#caracteristicas" class="nav-link text-text hover:text-accent transition-colors duration-200">
          Características
        </a>
        <a href="#precios" class="nav-link text-text hover:text-accent transition-colors duration-200">
          Precios
        </a>
        <a href="#contacto" class="nav-link text-text hover:text-accent transition-colors duration-200">
          Contacto
        </a>
      </div>

      <!-- CTA Button -->
      <a
        href="#contacto"
        class="hidden md:block bg-accent text-primary px-6 py-2.5 rounded-lg font-semibold hover:opacity-90 transition-all duration-200 hover:shadow-lg hover:scale-105"
      >
        Comenzar Gratis
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-text hover:text-accent transition-colors p-2"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-primary border-t border-border">
    <div class="container mx-auto px-6 py-4 flex flex-col gap-4">
      <a href="#inicio" class="mobile-nav-link text-text hover:text-accent transition-colors py-2">
        Inicio
      </a>
      <a href="#caracteristicas" class="mobile-nav-link text-text hover:text-accent transition-colors py-2">
        Características
      </a>
      <a href="#precios" class="mobile-nav-link text-text hover:text-accent transition-colors py-2">
        Precios
      </a>
      <a href="#contacto" class="mobile-nav-link text-text hover:text-accent transition-colors py-2">
        Contacto
      </a>
      <a
        href="#contacto"
        class="bg-accent text-primary px-6 py-2.5 rounded-lg font-semibold text-center hover:opacity-90 transition-all duration-200"
      >
        Comenzar Gratis
      </a>
    </div>
  </div>
</nav>

<script>
  // Navbar scroll effect
  const navbar = document.getElementById('navbar');
  const navLinks = document.querySelectorAll('.nav-link, .mobile-nav-link');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('bg-primary', 'shadow-md', 'backdrop-blur-sm', 'bg-opacity-95');
    } else {
      navbar?.classList.remove('bg-primary', 'shadow-md', 'backdrop-blur-sm', 'bg-opacity-95');
    }
  });

  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Smooth scroll for all navigation links
  navLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const href = link.getAttribute('href');
      if (href && href.startsWith('#')) {
        const targetId = href.substring(1);
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          const navbarHeight = navbar?.offsetHeight || 0;
          const targetPosition = targetElement.offsetTop - navbarHeight;
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script>

<style>
  /* Ensure navbar stays on top */
  #navbar {
    will-change: transform;
  }
</style>
