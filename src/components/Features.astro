---
// Features Section Component
const features = [
  {
    id: 1,
    icon: 'repeat',
    title: 'Recurrencias Automáticas',
    description: 'Programa una vez y el sistema gestiona todas las citas futuras automáticamente. Sin configuraciones manuales repetitivas.',
  },
  {
    id: 2,
    icon: 'notifications',
    title: 'Notificaciones Multicanal',
    description: 'Envía confirmaciones y recordatorios por WhatsApp según las preferencias de tus clientes. Todo desde una sola plataforma.',
  },
  {
    id: 3,
    icon: 'check-circle',
    title: 'Confirmaciones Automáticas',
    description: 'Los clientes confirman su asistencia con un simple clic. Sin llamadas ni mensajes manuales. Ahorra tiempo valioso.',
  },
  {
    id: 4,
    icon: 'mobile',
    title: 'Apps Nativas iOS y Android',
    description: 'Gestiona tu agenda desde cualquier lugar con nuestras apps nativas. Disponible en App Store y Google Play.',
  },
  {
    id: 5,
    icon: 'tools',
    title: 'Especializado en Servicios Recurrentes',
    description: 'Diseñado específicamente para piscineros, control de plagas, mantenimiento, refrigeración y más. Entiende tu negocio.',
  },
  {
    id: 6,
    icon: 'zap',
    title: 'Cero Configuración Manual',
    description: 'Una vez configurada la recurrencia, olvídate de las gestiones manuales. La automatización trabaja por ti.',
  },
];
---

<section id="caracteristicas" class="py-20 lg:py-28 bg-cards">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-text mb-6">
        Todo lo que necesitas para <span class="text-accent">automatizar tus citas</span>
      </h2>
      <p class="text-lg text-icons">
        Simplifica la gestión de tus servicios recurrentes con herramientas diseñadas para tu negocio
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-10 max-w-6xl mx-auto">
      {features.map((feature, index) => (
        <div
          class="feature-card bg-primary rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-border hover:border-accent/30"
          data-index={index}
        >
          <!-- Icon -->
          <div class="mb-6">
            <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center">
              {feature.icon === 'repeat' && (
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              )}
              {feature.icon === 'notifications' && (
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
              )}
              {feature.icon === 'check-circle' && (
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {feature.icon === 'mobile' && (
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              )}
              {feature.icon === 'tools' && (
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              )}
              {feature.icon === 'zap' && (
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              )}
            </div>
          </div>

          <!-- Content -->
          <div>
            <h3 class="text-xl md:text-2xl font-bold text-text mb-4">
              {feature.title}
            </h3>
            <p class="text-base text-icons leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  // Intersection Observer for scroll-triggered animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-in');
        // Optional: stop observing after animation
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observe all feature cards
  document.addEventListener('DOMContentLoaded', () => {
    const featureCards = document.querySelectorAll('.feature-card');
    featureCards.forEach((card) => {
      observer.observe(card);
    });
  });
</script>

<style>
  /* Initial state - hidden */
  .feature-card {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  /* Animated state - visible */
  .feature-card.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger animation delays */
  .feature-card[data-index="0"] {
    transition-delay: 0ms;
  }
  .feature-card[data-index="1"] {
    transition-delay: 100ms;
  }
  .feature-card[data-index="2"] {
    transition-delay: 200ms;
  }
  .feature-card[data-index="3"] {
    transition-delay: 300ms;
  }
  .feature-card[data-index="4"] {
    transition-delay: 400ms;
  }
  .feature-card[data-index="5"] {
    transition-delay: 500ms;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .feature-card {
      transition: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
